{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/vitest",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "types": [
      "vitest/globals",
      "vitest/importMeta",
      "vite/client",
      "node",
      "vitest"
    ],
    "paths": {
      "@ng-rspack/testing-utils": ["../../testing/utils/src/index.ts"]
    }
  },
  "include": [
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.integration.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "src/**/*.d.ts",
    "mocks/**/*.ts",
    "mocks/**/*.json",
    "package.json"
  ],
  "references": [
    {
      "path": "./tsconfig.lib.json"
    },
    {
      "path": "../../testing/utils/tsconfig.lib.json"
    },
    {
      "path": "../../testing/vitest-setup/tsconfig.lib.json"
    },
    {
      "path": "../../testing/setup/tsconfig.lib.json"
    }
  ]
}
